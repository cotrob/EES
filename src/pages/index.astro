  </div>

  <!-- Switching to Solar Section -->
  <section class="section switching-to-solar">
    <div class="container">
      <h2>Switching to solar is easy</h2>
      <div class="steps-timeline">
        <div class="step">
          <div class="step-marker">
            <span class="step-number">1</span>
            <div class="step-line"></div>
          </div>
