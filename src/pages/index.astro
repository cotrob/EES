          <svg class="pill-check" viewBox="0 0 20 20" fill="none">
            <path d="M5 10l3.5 3.5L15 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span>Replies Within 24 Hours</span>
        </div>
      </div>
      <div class="scroll-indicator">
        <div class="scroll-mouse">
          <div class="scroll-wheel"></div>
        </div>
        <svg class="scroll-arrow" xmlns="http://www.w3.org/2000/svg" width="39" height="22" viewBox="0 0 14 8" fill="none" stroke="white" opacity="0.7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M1 1l6 5 6-5"/>
        </svg>
      </div>
    </div>
  </section>

  <!-- Credentials Bar -->
  <section class="credentials-bar">
    <div class="credentials-bg"></div>
    <div class="credentials-content">
      <div class="credential">
