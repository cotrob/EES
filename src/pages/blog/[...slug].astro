---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout
  title={`${post.data.title} | Blog | Your Company Name`}
  description={post.data.description}
  image={post.data.image?.src}
  type="article"
  publishedTime={post.data.pubDate}
  modifiedTime={post.data.updatedDate}
  author={post.data.author}
>
  <article class="blog-post">
    <header class="post-header">
      <div class="container">
        <time datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </time>
        <h1>{post.data.title}</h1>
        {post.data.author && <p class="author">By {post.data.author}</p>}
      </div>
    </header>

    {post.data.image && (
      <div class="featured-image container">
        <img src={post.data.image.src} alt={post.data.image.alt} />
      </div>
    )}

    <div class="container">
      <div class="prose post-content">
        <Content />
      </div>

      {post.data.tags.length > 0 && (
        <div class="post-tags">
          {post.data.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}

      <nav class="post-nav">
        <a href="/blog">&larr; Back to Blog</a>
      </nav>
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding-bottom: 4rem;
  }

  .post-header {
    padding: 4rem 0 2rem;
    text-align: center;
    background: #f5f7fa;
  }

  .post-header time {
    font-size: 0.875rem;
    color: #666;
  }

  .post-header h1 {
    margin-top: 0.5rem;
    font-size: 2.5rem;
  }

  .author {
    color: #666;
    margin-top: 0.5rem;
  }

  .featured-image {
    margin: 2rem auto;
  }

  .featured-image img {
    width: 100%;
    max-height: 500px;
    object-fit: cover;
    border-radius: 0.5rem;
  }

  .post-content {
    margin: 2rem auto;
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e7eb;
  }

  .tag {
    background: #f3f4f6;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    color: #666;
  }

  .post-nav {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e7eb;
  }

  .post-nav a {
    text-decoration: none;
    font-weight: 500;
  }
</style>
