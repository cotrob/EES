        <svg class="credential-icon" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect x="12" y="6" width="40" height="52" rx="4" stroke="currentColor" stroke-width="3"/>
          <path d="M24 30l6 6 12-12" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
