    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const bubble = entry.target as HTMLElement;
        bubble.classList.add('is-visible');
        replyObserver.unobserve(bubble);
      }
    });
  }, { threshold: 0.3 });

