---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout
  title="Blog | Your Company Name"
  description="Read our latest articles, insights, and updates from our team."
>
  <section class="page-header">
    <div class="container">
      <h1>Blog</h1>
      <p>Insights, updates, and stories from our team.</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      {posts.length === 0 ? (
        <p class="no-posts">No blog posts yet. Check back soon!</p>
      ) : (
        <div class="posts-grid">
          {posts.map((post) => (
            <article class="post-card">
              {post.data.image && (
                <img
                  src={post.data.image.src}
                  alt={post.data.image.alt}
                  class="post-image"
                />
              )}
              <div class="post-content">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
                <h2>
                  <a href={`/blog/${post.id}`}>{post.data.title}</a>
                </h2>
                <p>{post.data.description}</p>
                <a href={`/blog/${post.id}`} class="read-more">
                  Read more &rarr;
                </a>
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  .page-header {
    padding: 4rem 0;
    text-align: center;
    background: #f5f7fa;
  }

  .page-header p {
    color: #666;
    font-size: 1.125rem;
  }

  .no-posts {
    text-align: center;
    color: #666;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
  }

  .post-card {
    background: #fff;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .post-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .post-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .post-content time {
    font-size: 0.875rem;
    color: #666;
    margin-bottom: 0.5rem;
  }

  .post-content h2 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
  }

  .post-content h2 a {
    color: inherit;
    text-decoration: none;
  }

  .post-content h2 a:hover {
    color: #0066cc;
  }

  .post-content p {
    color: #666;
    flex: 1;
  }

  .read-more {
    font-weight: 500;
    text-decoration: none;
  }
</style>
