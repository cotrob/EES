<style>
  /* Hero Section */
  .hero {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    position: relative;
    overflow: hidden;
    padding: 4rem 2rem;
  }

  .hero-slideshow {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-slide {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    filter: blur(0px);
    animation: heroBlur 43.2s ease-in-out infinite;
  }

  .hero-slide:nth-child(1) { animation-delay: 0s; }
  .hero-slide:nth-child(2) { animation-delay: 4.8s; }
  .hero-slide:nth-child(3) { animation-delay: 9.6s; }
  .hero-slide:nth-child(4) { animation-delay: 14.4s; }
  .hero-slide:nth-child(5) { animation-delay: 19.2s; }
  .hero-slide:nth-child(6) { animation-delay: 24.0s; }
  .hero-slide:nth-child(7) { animation-delay: 28.8s; }
  .hero-slide:nth-child(8) { animation-delay: 33.6s; }
  .hero-slide:nth-child(9) { animation-delay: 38.4s; }

  @keyframes heroBlur {
    0%      { opacity: 0; filter: blur(12px); }
    1.5%    { opacity: 1; filter: blur(0px); }
    9.5%    { opacity: 1; filter: blur(0px); }
    11.1%   { opacity: 0; filter: blur(12px); }
    100%    { opacity: 0; filter: blur(12px); }
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.35) 0%, transparent 100%);
    z-index: 1;
  }

  .hero-content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 63%;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: #fff;
    padding: 0 2rem;
  }

  .hero-eyebrow {
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #fff;
    margin-bottom: 0.75rem;
  }

  .hero h1 {
    font-size: 3.5rem;
    margin-bottom: 1.25rem;
    color: #fff;
    line-height: 1.05;
    font-weight: 800;
  }

  .hero-subtitle {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 1.25rem;
    line-height: 1.6;
    white-space: nowrap;
  }

